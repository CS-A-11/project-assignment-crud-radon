doctype html
html
  head
    meta(name='viewport', content='width=device-width, initial-scale=1')
    title= title
    link(rel='stylesheet', href='/bootstrap/css/bootstrap.min.css')
    link(rel='stylesheet', href='/stylesheets/discussionspage.css')
        

  body
    // Navigation Bar
    nav.navbar.navbar-expand-lg.navbar-dark.bg-dark.fixed-top
      .container
        a.navbar-brand(href='/discussions') Radon Discussion Forum
        button.navbar-toggler(type='button', data-toggle='collapse', data-target='#navbarResponsive', aria-controls='navbarResponsive', aria-expanded='false', aria-label='Toggle navigation')
          span.navbar-toggler-icon
          
        #topBar.collapse.navbar-collapse
          ul.navbar-nav.ml-auto
            li.nav-item
              a.nav-link(href='http://localhost:5000/') Home
    // Navigation Bar ends here


    block content
      
      each discussion in discussions
        .query
          .user-details
            img(src=discussion.user.img, alt="")
            h6= discussion.user.userName
          .query-details
            a(href="/queries/"+discussion.queryTopic)
              h1= discussion.queryTopic
            p= discussion.queryExcerpt
            
            .tags
              each tag in discussion.tags
                span= tag.name
            .query-date= discussion.date 
