extends articlePostViewLayout

block content
  .page-content
    each article in articles
      .card-item.col-lg-3.col-md-4.col-sm-6.portfolio-item
        .card.h-100
          a(href="/article_post/" + article._id)
            img.card-img-top(src='/uploads/' + article.imageName, alt='' style= "width: 100%; height: 180px;")
          .card-body
            h5.card-title
              a(href="/article_post/" + article._id style="text-decoration: none")= article.title
            .card-text(style="font-size: 0.9em; height: 125px; overflow: hidden;")!= article.content
            a.btn.btn-outline-secondary(href="/article_post/" + article._id style="margin-top: 10px;") More